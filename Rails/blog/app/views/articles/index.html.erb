<h1>All the articles</h1>

<%= link_to "New article", new_article_path %>
<div class="container">
  <% @articles.each do |article| %>
  <div style="border-style: solid;">
    <p> <strong>Id:</strong> <%= article.id %> </p>
    <p> <strong>Title:</strong> <%= article.title %> </p>
    <p> <strong>Text:</strong> <%= article.text %> </p>
    <p> <%= link_to 'Show', article_path(article) %></p>
    <p> <%= link_to 'Edit', edit_article_path(article) %></p>
    <p> <%= link_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %> </p>
  </div>

  <% end %>
</div>
